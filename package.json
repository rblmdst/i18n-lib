{
  "name": "@rblmdst/i18n-lib",
  "version": "1.0.0",
  "description": "A simple internationalization library for Node.JS",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist/"
  ],
  "types": "dist/cjs/index.d.ts",
  "scripts": {
    "build": "rm -rf ./dist && npm run build:cjs_es",
    "build:cjs_es": "npm run build:cjs && npm run build:es",
    "build:cjs": "tsc -p tsconfig-cjs.json",
    "build:es": "tsc -p tsconfig.json",
    "test": "jest"
  },
  "author": "Modeste ASSIONGBON",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^14.17.2",
    "jest": "^27.0.4",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.3"
  },
  "keywords": [
    "i18n",
    "node-i18n",
    "i18n-lib",
    "internationalization"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rblmdst/i18n-lib.git"
  }
}
